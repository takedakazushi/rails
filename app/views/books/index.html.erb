<h1>Books</h1>
<%= form_with model: @book do |f| %>
 <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
 <h4>タイトル</h4>
 <%= f.text_field :title %>
 <h4>本文</h4>
 <%= f.text_area :body %>
 <%= f.submit '投稿' %>
<% end %>